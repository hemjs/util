{
  "name": "@hemjs/util",
  "version": "0.1.1",
  "description": "Utilities for arrays, objects, strings, and more",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "stdlib",
    "util"
  ],
  "scripts": {
    "prebuild": "rimraf -rf dist",
    "build:copy-misc": "node ./scripts/copy-misc.js",
    "build": "tsc -p tsconfig.build.json && npm run build:copy-misc",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "release-it": "15.6.0",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  },
  "homepage": "https://github.com/hemjs/util#readme",
  "bugs": {
    "url": "https://github.com/hemjs/util/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/util.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
